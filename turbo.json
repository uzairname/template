{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "dev": {
      "dependsOn": ["^dev"],
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "deploy:dev": {
      "dependsOn": ["^deploy:dev"]
    },
    "deploy:prod": {
      "dependsOn": ["^deploy:prod"]
    }
  }
}
